@model PetGrooming.Models.Species

@{
    ViewBag.Title = "Show Species";
}
<div class="panel panel-primary top">
    <div class="panel-heading header-color">
        Species Detail
        <a href="/Species/Delete/@Model.SpeciesID" class="deleteicon" title="Click to Delete"><span class="glyphicon glyphicon-trash"></span></a>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <span><a href="/Species/Update/@Model.SpeciesID" title="Click to Update">@Model.Name</a></span>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "List", "Species", new { htmlAttributes = new { @class = "" } })
</div>

